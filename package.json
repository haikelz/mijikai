{
  "name": "mijikai",
  "author": "Haikel Ilham Hakim",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "Mijikai is a free shorten URL Website. No ads, no tracker!",
  "repository": {
    "type": "git",
    "url": "https://github.com/haikelz/mijikai"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@mijikai/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
